{
  "$schema": "https://raw.githubusercontent.com/persevie/grimoire-css/refs/heads/main/src/core/config-schema.json",
  "projects": [
    {
      "projectName": "main",
      "inputPaths": [
        "templates/*"
      ],
      "outputDirPath": "static",
      "singleOutputFileName": "build.css"
    }
  ],
  "critical": [
    {
      "fileToInlinePaths": [
        "templates/index.html"
      ],
      "cssCustomProperties": [
        {
          "element": "body",
          "dataParam": "theme",
          "dataValue": "dark",
          "cssVariables": {
            "font-family": "'IBM Plex Sans', sans-serif",
            "bg-color": "#1e1e1e",
            "text-color": "#d4d4d4",
            "header-footer-bg": "#252526",
            "border-color": "#3c3c3c",
            "editor-bg": "#1e1e1e",
            "button-bg": "#0e639c",
            "button-hover-bg": "#1177bb",
            "button-text-color": "#ffffff",
            "button-disabled-bg": "#3c3c3c",
            "button-disabled-text": "#808080",
            "divider-bg": "#3c3c3c",
            "toast-bg": "#333333",
            "toast-text-color": "#ffffff",
            "accent-color": "#0e639c",
            "link-color": "#ffffff",
            "link-hover-color": "#1e90ff",
            "hint-color": "#888888"
          }
        }
      ]
    }
  ]
}
